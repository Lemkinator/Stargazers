<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeight"
    android:animateLayoutChanges="true"
    android:background="?listChoiceBackgroundIndicator"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="?android:listPreferredItemPaddingStart"
    android:paddingEnd="?android:listPreferredItemPaddingEnd">

    <CheckBox
        android:id="@+id/icon_list_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="?android:listPreferredItemPaddingStart"
        android:background="@null"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/icon_list_item_icon"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:gravity="center"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/icon_list_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingVertical="14.0dip"
        android:paddingHorizontal="10.0dip"
        android:textAppearance="?textAppearanceListItem" />


</LinearLayout>